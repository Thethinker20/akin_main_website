                                    <option value="Rpa consultant">Rpa consultant</option>
                                    <option value="Project Management">Project Management</option>
                                    <option value="Software Develop">Software Develop</option>
                                    <option value="Courses">Courses</option>
                                </select>
                            </div>
                        </div>
                        <div class="formbold-input-flex">
                            <div>
                                <label class="formbold-form-label"> Needs and goals for this service? </label>
                                <select class="formbold-form-input" name="n_goals" id="n_goals" required>
                                    <option value="" disabled selected>Select Needs and Goals</option>
                                    <option value="Increase efficiency">Increase efficiency</option>
                                    <option value="Reduce costs">Reduce costs</option>
                                    <option value="Improve customer satisfaction">Improve customer satisfaction
                                    </option>
                                    <option value="Business improvement and update">Business improvement and update
                                    </option>
                                </select>
                            </div>
                            <div>
                                <label class="formbold-form-label"> What level of expertise do you require? </label>
                                <select class="formbold-form-input" name="l_expert" id="l_expert" required>
                                    <option value="" disabled selected>Select level of expertise</option>
                                    <option value="Entry-level">Entry-level</option>
                                    <option value="Intermediate">Intermediate</option>
                                    <option value="Advanced">Advanced</option>
                                </select>
                            </div>
                        </div>

                        <div class="formbold-input-flex">
                            <div>
                                <label class="formbold-form-label"> Preferred timeline for this service </label>
                                <select class="formbold-form-input" name="timeline" id="timeline" required>
                                    <option value="" disabled selected>Select level of expertise</option>
                                    <option value="1">ASAP</option>
                                    <option value="2">Within the next month </option>
                                    <option value="3">Within the next quarter</option>
                                    <option value="4">Not defined</option>
                                </select>
                            </div>
                            <div>
                                <label class="formbold-form-label"> What is your budget for this service? </label>
                                <select class="formbold-form-input" name="budget" id="budget" required>
                                    <option value="" disabled selected>Select your budget</option>
                                    <option value="1">Less than 1,000 Guilders</option>
                                    <option value="2">Between 1,000-5,000 Guilders</option>
